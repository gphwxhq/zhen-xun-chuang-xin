.searchBlock {
  background-color: rgb(53, 164, 255);
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}

.logo {
  /* padding-left: 15rpx; */
  width: 100rpx;
  height: 80rpx;
}

.searchInput {
  position: relative;
  width: 80%;
  /* margin: 0 auto; */
  /* height: 68rpx; */
  -webkit-overflow-scrolling: touch;
  background: #ffff;
  border-radius: 32rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
}

#searchInput {
  font-size: 24rpx;
  color: #fff;
  display: inline-block;
}

.swiper-slide {
  height: 10px
}

/* 随意指定一个height值即可 */
.swiper-slide-active {
  height: auto
}

swiper {
  width: 100%;
  /*套用计算swiper高度的公式*/
  height: 420rpx;
}

image {
  /*图片自适应屏幕大小*/
  width: 100%;
}

swiper-item {
  height: 100%;
  width: 100%;
}

.slide-image {
  height: 100%;
  width: 100%;
}

.tbody {
