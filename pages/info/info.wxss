/* pages/info/info.wxss */
page {
  display: relative;
  background-color: #eeeeee;
}

.main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.info {
  width: 100%;
  background-color: #35A4FF;
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  padding-left: 30rpx;
  padding-bottom: 20rpx;
  align-items: center;
  justify-content: space-around;
}

.user_avatar {
  /* border-radius: 50px; */
  width: 200rpx;
  height: 200rpx;
}

.get_info {
  width: 25% !important;
  /* background-color: violet; */
}

.name {
  color: white;
  width: 35%;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

#name {
  padding-left: 20rpx;
  font-weight: bold;
  font-size: x-large;
}

.colLine {
  background: #c0c0c0;
  height: 100%;
  width: 5rpx;
}

.motto_area {
  display: flex;
  flex-direction: column;
  align-items: left;
  /* justify-content: space-around; */
  margin-top: 10rpx;
  width: 100%;
  height: 200rpx;
  background-color: white;
  border-radius: 10px;
}

.motto_block {
  /* border-width: 3px;
   border-style: solid;
   border-color: #35A4FF; */
  display: flex;
  background-image: url('https://6d61-main-2gjpci0p59828101-1305705970.tcb.qcloud.la/src/info_bac.jpeg?sign=46ccd9a301767acd704db5dcbbf5eca7&t=1620724663');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  /* border-radius: 20px; */
  /* background-color: white; */
  width: 100%;
  height: 170rpx;
}

.motto {
  width: 90%;
  text-align: center;
  /* text-decoration:underline; */
  color: rgba(223, 219, 219);
  font-size: large;
}

.affair {
  display: flex;
  width: 100%;
  margin-top: 10rpx;
  flex-direction: column;
  background-color: white;
  border-radius: 10px;
  /* height: 400rpx; */
}

.row_button image {
  width: 100rpx;
  height: 100rpx;
}

.row_button {
  padding: 10rpx 5rpx 0 5rpx;
  display: flex;
  width: 100% !important;
  flex-direction: row;
  align-items: center;
  background-color: white;
  border-bottom: solid #c0c0c0 1px;
}
.title{
  padding-left: 20rpx;
  /* font-size: small; */
  border-bottom: solid #c0c0c0 1px;
}
.row_button view {
  font-weight: normal;
  padding-left: 10rpx;
}