/**index.wxss**/


.searchBlock{
  display: flex;
  align-items: center;
  background-color: rgb(53, 164, 255);
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}
.searchInput{
  position: relative;
  width: 75%;
  margin: 0 auto;
  /* height: 68rpx; */
  -webkit-overflow-scrolling: touch;
  background: #ffff;
  border-radius: 32rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
}
.tbody{
  /* background-color: rgb(194, 194, 194); */
  width:100%;
  padding-top:10rpx;
  padding-bottom: 10rpx;
  height:100%;
}
.text_container{
  /* border-radius: 20rpx; */

  background-color: rgb(255, 255, 255);
  margin-left: 10rpx;
  margin-right:10rpx;
  margin-bottom: 10rpx;
  padding:5rpx;
  /* height: 500rpx; */
}
.content{
  background-color:#fff;
  border-radius: 20rpx;
 height:100%;
}
.divLine{
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
 }
.notfound{
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
  height: 100%;
  font-size:medium;
}
.flex_row{
  display: flex;
  flex-direction: row;
  justify-content:left;
}
.flex_col{
  display: flex;
  flex-direction: column;
  justify-content:center;
  /* align-items: left; */
}

.flex_col view{
  margin-left: 20rpx;
  width:550rpx;
}
.loading_state{
  text-align: center;
  color: grey;
}
#submitBtn{
  position: relative;
  /* background: rgb(0, 0, 0); */
  /* color: white; */
  height: 60rpx;
  width: 23%;
  font-size: 21rpx;
  border-radius: 32rpx;
}
#submitBtn:disabled{
  background-color: grey;
}

#searchInput{
  font-size: 24rpx;
  color: #000;
  display:inline-block;
}