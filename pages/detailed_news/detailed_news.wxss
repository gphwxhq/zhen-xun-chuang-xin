.text_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* border-radius: 20rpx; */
  background-color: rgb(255, 255, 255);
  /* width: 100%; */
  /* margin-left: 10rpx; */
  /* margin-right:10rpx; */
  /* height: 500rpx; */
}

.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:10rpx;
  border-bottom: solid 1rpx #c0c0c0;
}

.containerView {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: solid 1rpx #c0c0c0;
}

.containerText {
  width: 480rpx;
  /* text-align: center; */
  /* background-color: red; */
}

.image {
  width: 240rpx;
  height: 160rpx;
}

.flex_row {
  padding-left: 10rpx;
  padding-right: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  border-bottom: solid 1rpx #c0c0c0;
}
.flex_row image{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width:150rpx;
  height:150rpx;
}
.flex_col {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
}

.flex_col view {
  margin-left: 20rpx;
  width: 550rpx;
}
.loading_state{
  text-align: center;
  color: grey;
}
